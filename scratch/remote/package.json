{
  "name": "remote-worker",
  "version": "0.0.1",
  "description": "Media manager remote working container",
  "main": "index.js",
  "author": "Richard Cartwright <spark@superfly.tv>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "trash dist && yarn build:main",
    "build:main": "tsc -p tsconfig.json",
    "start": "node dist/app.js",
    "build-win32": "trash deploy && mkdir deploy && yarn build && nexe dist/app.js -t windows-x64-12.18.1 -o deploy/worker.exe && node deploy-modules.js",
    "build-docker": "docker build ."
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "beamcoder": "^0.5.8",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^9.1.0",
    "redioactive": "^0.0.7",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "vm2": "^3.9.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.5",
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.1",
    "@types/koa__cors": "^3.0.1",
    "@types/node": "^14.0.24",
    "find": "^0.3.0",
    "fs-extra": "^9.0.1",
    "nexe": "^3.3.7",
    "trash-cli": "^3.0.0"
  }
}
